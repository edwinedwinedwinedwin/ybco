<p id="notice"><%= notice %></p>

<h1>Project Milestones</h1>

<table class="table table-striped">
  <thead>
    <tr>      
      <th>Name</th>      
      <th>Start Date</th>
      <th>End Date</th>
      <th>Amount Raised</th>
      <th>Target Amount</th>
		<th>Project ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
	  <% @projectMilestones.each do |f| %>
      <tr>        
		  <td><%= f.name %></td>        
		  <td><%= f.start_date %></td>
		  <td><%= f.end_date %></td>
		  <td><%= f.amount_raised %></td>        
		  <td><%= f.target_amount %></td>        
		  <td><%= f.project_id %></td>       
		  <td><%= link_to 'Edit Milestone', {:controller => "project_milestones", :action => "edit", :id=>f.id }%></td>

		  <td><%= link_to 'Delete Milestone', {:controller => "project_milestones", :action => "destroy", :id=>f.id} %></td>
	  </tr>
	  <% end %>
  	</tbody>
</table>

<%= link_to 'Add Project Milestones', {:controller => "project_milestones", :action => "new"} %>