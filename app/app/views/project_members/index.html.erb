<p id="notice"><%= notice %></p>

<h1>Project Members</h1>

<table border=1 class="table table-striped">
  <thead>
    <tr>      
      <th>Name</th>      
      <th>Role</th>
      <th>Img_url</th>
      <th>Project_id</th>      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projectMembers.each do |projectMember| %>      
      <tr>              
        <td><%= projectMember.name %></td>        
        <td><%= projectMember.role %></td>
        <td><%= projectMember.img_url %></td>
        <td><%= projectMember.project_id %></td>
        <td><%= link_to 'Edit Member', {:controller => "project_members", :action => "edit", :id=>projectMember.id }%></td>
        <td><%= link_to 'Delete Member', {:controller => "project_members", :action => "destroy", :id => projectMember.id } %> </td>

      </tr>      
    <% end %>
  </tbody>
</table>

<%= link_to 'Add Project Member', {:controller => "project_members", :action => "new" } %><br>
