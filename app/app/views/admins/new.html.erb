<div class="page-main">
  <%= stylesheet_link_tag "style" %>
  <%= stylesheet_link_tag "component" %>
  <%= stylesheet_link_tag "flickity/flickity.css" %>
  <%= javascript_include_tag "application"%>

  <div class="page-section">
    <legend class="form-heading heading"> Add New Admin </legend>

      <%= form_for(@user) do |f| %>              
          <%= f.hidden_field :is_admin, :value => true %>
          <%= f.hidden_field :is_banned, :value => false %>
          <%= f.hidden_field :address, :value => 'Admin' %>

          <% if @user.errors.any? %>
              <div class="alert alert-danger" role="alert">
                <b><u>Errors:</u></b>
                <ul>
                  <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <div class="form-field">
            <%= f.text_field :first_name, class: "form-input", placeholder: "First Name" %>
            <label class="form-label" for="first-name">First Name</label>
          </div>

          <div class="form-field">
            <%= f.text_field :last_name, class: "form-input", placeholder: "Last Name" %>
            <label class="form-label" for="last-name">Last Name</label>
          </div>
          
          <div class="form-field">
            <%= f.text_field :email, class: "form-input", placeholder: "Email"  %>
            <label class="form-label" for="email">Email</label>
          </div>

          <div class="form-field">
            <%= f.password_field :password, class: "form-input", placeholder: "Password" %>
            <label class="form-label" for="password">Password</label>
          </div>

          <div class="form-field">
            <%= f.password_field :password_confirmation, class: "form-input", placeholder: "Password"  %> 
            <label class="form-label" for="password">Confirm Password</label>       
          </div>

          <div class="form-actions">
            <td align=right><%= f.submit "Create Admin", class: "button--stroke--long" %></td>
          </div>

      <% end %>
      <br>
  	  
      <%= link_to 'Back', {:controller => "admins", :action => "manage" } %>

    </div>
  </div>
      